                  type-level-sets   == 0.5,
                  supermonad        == 0.1
  main-is:             MainSupermonad.hs
  hs-source-dirs:      .
  default-language:    Haskell2010
  ghc-options:         -Wall -dynamic -dcore-lint -fno-opt-coercion

