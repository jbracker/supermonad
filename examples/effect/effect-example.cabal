build-type:          Simple
cabal-version:       >=1.10

executable effect-example
  build-depends:  base            >= 4.8,
                  effect-monad    == 0.7,
                  type-level-sets == 0.5
  main-is:             Main.hs
  hs-source-dirs:      .
  default-language:    Haskell2010
  ghc-options:         -Wall -dynamic -dcore-lint
                       -fno-warn-unused-binds -fno-warn-unused-matches
                       -fno-warn-name-shadowing

